          <label for="">Nombre </label>
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Nombre Del Producto"
            name="name"
            value="<%= name %>"
          />
          <label for="">Marca </label>
          <input
            type="text"
            class="form-control"
            id="marca"
            placeholder="Nombre Del Producto"
            name="marca"
            value="<%= marca %>"
          />
          <label for="" class="form-label">Precio</label>
